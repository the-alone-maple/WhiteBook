<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    >
    <TextView
        android:id="@+id/home_item_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/WhiteBookTextViewStyle"
        android:background="@drawable/main_list_item_bg"
        android:layout_weight="1"
        android:padding="@dimen/dimen_padding"
        android:text="未显示"/>

    <ImageView
        android:id="@+id/home_item_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_empty_picture"
        />
</LinearLayout>